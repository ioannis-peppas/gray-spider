<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background='@color/purple_700'
    tools:context=".ui.home.Activity_add_node">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <Button
            android:id="@+id/submit_button"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:onClick="SubmitNode"
            android:text="Save"
            android:translationY="60dp" />

        <ImageView
            android:id="@+id/node_profile_image"
            android:layout_width="106dp"
            android:layout_height="94dp"
            android:layout_gravity="center"
            android:translationY="60dp"
            app:srcCompat="@drawable/user_profile_png_free_image" />

        <EditText
            android:id="@+id/numeral"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/edit_round"
            android:hint="Numeral"
            android:inputType="number"
            android:maxLength='4'
            android:textAlignment="center"
            android:textColor="#000000"
            android:textStyle="bold"
            android:translationY="70dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="118dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="G-Checking"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="subtractGCheck"
                    android:text="@string/minus_sign" />

                <EditText
                    android:id="@+id/investment_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_round"
                    android:inputType="number"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/button13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="AddGCheck"
                    android:text="@string/plus_sign" />

                <ImageView
                    android:id="@+id/g_checking_inf"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@android:drawable/ic_dialog_info" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/understanding_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Understanding "
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button0"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:onClick="SubtractUnderstanding"
                    android:text="@string/minus_sign" />

                <EditText
                    android:id="@+id/understanding_val"
                    android:layout_width="54dp"
                    android:layout_height="wrap_content"
                    android:autofillHints=""
                    android:background="@drawable/edit_round"
                    android:inputType="number"

                    android:textAlignment="center" />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:onClick="AddUnderstanding"
                    android:text="@string/plus_sign" />

                <ImageView
                    android:id="@+id/understanding_inf"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@android:drawable/ic_dialog_info" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="27dp"
                    android:layout_height="wrap_content"
                    android:onClick="SubtractTime"

                    android:text="-" />

                <EditText
                    android:id="@+id/time_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autofillHints=""
                    android:background="@drawable/edit_round"
                    android:inputType="number"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="AddTime"
                    android:text="+" />

                <ImageView
                    android:id="@+id/time_inf"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@android:drawable/ic_dialog_info" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Money"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="SubtractMoney"
                    android:text="@string/minus_sign" />

                <EditText
                    android:id="@+id/money_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_round"
                    android:inputType="number"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="AddMoney"
                    android:text="@string/plus_sign" />

                <ImageView
                    android:id="@+id/money_inf"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@android:drawable/ic_dialog_info" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Work"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="SubtractWork"
                    android:text="@string/minus_sign" />

                <EditText
                    android:id="@+id/work_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_round"
                    android:inputType="number"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="AddWork"
                    android:text="@string/plus_sign" />

                <ImageView
                    android:id="@+id/work_inf"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@android:drawable/ic_dialog_info" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Networking"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="SubtractNetworking"
                    android:text="@string/minus_sign" />

                <EditText
                    android:id="@+id/networking_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_round"
                    android:inputType="number"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="AddNetworking"
                    android:text="@string/plus_sign" />

                <ImageView
                    android:id="@+id/networking_inf"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@android:drawable/ic_dialog_info" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Action/Voltage"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="SubtractVoltage"
                    android:text="@string/minus_sign" />

                <EditText
                    android:id="@+id/voltage_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_round"
                    android:inputType="number"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/button11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="AddVoltage"
                    android:text="@string/plus_sign" />

                <ImageView
                    android:id="@+id/action_inf"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@android:drawable/ic_dialog_info" />
            </TableRow>

        </TableLayout>

        <EditText
            android:id="@+id/editTextNumberSigned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/editTextNumberSigned2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberSigned" />

        <!-- app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintRight_toRightOf="parent"
         app:layout_constraintTop_toTopOf="parent"-->
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>